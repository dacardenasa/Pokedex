{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "typeRoots": ["./src/types"],
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@adapters": ["src/adapters"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@hooks": ["src/hooks"],
      "@interfaces": ["src/interfaces"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"],
      "@services": ["src/services"],
      "@theme": ["src/theme"],
      "@utils": ["src/utils"]
    }
  }
}
